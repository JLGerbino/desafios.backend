<h1>Listado de productos home</h1>
{{#each products}}
  <p>id: {{this._id}}, title: {{this.title}}, description: {{this.description}}, code: {{this.code}}, price: {{this.price}}, status: {{this.status}}, stock: {{this.stock}}, category: {{this.category}}, thumbnail: {{this.thumbnail}}</p><br>
{{/each}}

{{#if hasPrevPage}}
  <a href="/?page={{prevPage}}&sort={{sort}}&limit={{limit}}"><button>Anterior</button></a>
{{/if}}
{{#if hasNextPage}}
  <a href="/?page={{nextPage}}&sort={{sort}}&limit={{limit}}"><button>Siguiente</button></a><br>
{{/if}}

<p>Pagina: {{page}}</p>
<p>Total paginas: {{totalPages}}</p>
